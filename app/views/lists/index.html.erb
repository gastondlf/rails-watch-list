<div class="row d-flex">
    <div class="col-12 shadow-lg p-2 bg-white mt-4 rounded">
        <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png); background-position: center;">
            <div class="container">
                <h1 class="text-white pt-5 px-5"><strong>Movies wish lists</strong></h1>
                <p class="text-white px-5">Create your own movie lists and share with your friends!</p>
                <%= link_to "+New List", new_list_path, class: "btn btn-info mx-5 mb-5" %>
            </div>
        </div>
        <div class="p-3 row d-flex">
            <div class="col"></div>
            <% @lists.each do |list|  %>
            <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
                <%= link_to list.name, list_path(list), :style => "text-decoration: none" %>
            </div>
                <% end %>
            </div>
        </div>
    </div>
</div>