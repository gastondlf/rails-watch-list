<h1>List:
"<%= @list.name %>"
</h1>
<%= link_to "Back", lists_path %>
<%= link_to "+Add bookmark", new_list_bookmark_path(@list) %>
<hr>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<h4>Movies in the list:</h4>
<% @list.bookmarks.reverse.each do |bookmark| %>
<h6>
<%= bookmark.movie.title %>
</h6>
<p>
<%= bookmark.comment %>
</p>
<%= link_to "delete", list_bookmark_path(@list.id, bookmark.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<hr>
<% end %>